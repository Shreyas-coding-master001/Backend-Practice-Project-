<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reading</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        html,body{
            height: 100%;
            width: 100%;
            background-color: black;
            color: whitesmoke;
            font-family: system-ui, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        body{
            display: flex;
            flex-direction: column;
            padding: 50px;
        }

        a{
            text-decoration: none;
            color: royalblue;
            margin: 50px 20px;
        }

        .cards{
            display: flex;
            gap: 30px;
        }
        .card{
            margin-top: 100px;
            width: 300px;
            height: 350px;
            border-radius: 20px;
            background-color: gray;
            padding: 10px;
            
        }

        .card .image{
            width: 100%;
            height: 70%;
            background-color: darkgray;
            border-radius: 15px;
            overflow: hidden;

            && img{
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
            }
        }
        .details a{
            color: red;
            padding: 20px;
        }
    </style>
</head>
<body>
    <a href="/">⬅️ Go Back</a>

    <div class="cards">
        <% userdata.forEach((user) => { %>
            <div class="card">
                <div class="image">
                    <img src="<%= user.image %>" alt="Image">
                </div>
                <div class="details">
                    <h2>Username: <%= user.name %></h2>
                    <h3>Age: <%= user.age %></h3>
                    <a href="/delete/<%= user._id %>">Delete</a>
                </div>
            </div>
        <% }); %>
    </div>
    
</body>
</html>